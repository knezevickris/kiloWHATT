<UserControl x:Class="efficiencyCalculator.View.UserComponents.DeviceRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:efficiencyCalculator.View.UserComponents"
             xmlns:model="clr-namespace:efficiencyCalculator.Model"
             Height="40" Width="680" Margin="10,0" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>
        <Label Name="lblDeviceName" FontWeight="DemiBold" Content="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Name="lblDeviceConsumption" Grid.Column="1" Content="{Binding Consumption}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Name="lblDeviceExpense" Grid.Column="2" Content="{Binding Expense}" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <Border Name="brdDeviceClass" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" BorderThickness="0.5" CornerRadius="3" Height="auto" Width="auto" >
            <Label Name="lblDeviceClass"  Content="{Binding Class}" Foreground="Black"  FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ></Label>
        </Border>
        <Separator Grid.ColumnSpan="4" Width="700" VerticalAlignment="Bottom" Foreground="CadetBlue"></Separator>
    </Grid>
</UserControl>
