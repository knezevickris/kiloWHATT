<Window x:Class="efficiencyCalculator.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:efficiencyCalculator.View"
        mc:Ignorable="d"
        Title="Podešavanja" Height="400" Width="350" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" Icon="/Resources/Icon/settings.ico"
        Background="{DynamicResource settingsBackground}"
        Foreground="{DynamicResource windowForeground}">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="20" Text="Podešavanja" Margin="0, 20" />
        <TextBlock HorizontalAlignment="Right" Grid.Row="1" Text="Tema" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Right"  Grid.Row="2" TextWrapping="Wrap" Text="Cijena kWh struje" VerticalAlignment="Center"/>
        <TextBox Name="txtPrice" Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Right" Grid.Row="2" Text="{}" VerticalAlignment="Center" Width="80" />
        <ComboBox Name="cmbTheme" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="120" Cursor="Hand">
            <ComboBoxItem Content="Svijetli režim"/>
            <ComboBoxItem Content="Tamni režim"/>
        </ComboBox>
        <Label Name="lblLastUpdated" FontWeight="ExtraBold" Foreground="Gold" Grid.Column="1" Content="12.12.2025." HorizontalAlignment="Right" Margin="0,0,30,0" FontStyle="Italic" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,0,0,0" Grid.ColumnSpan="2" Grid.Row="3" Text="Datum posljednjeg ažuriranja cijene" VerticalAlignment="Center"/>
        <Label  Grid.Column="1" Content="KM" HorizontalAlignment="Left" Margin="145,0,0,0" Grid.Row="2" VerticalAlignment="Center" RenderTransformOrigin="-0.28,0.501"/>
        <Button IsHitTestVisible="True" x:Name="btnSave" Height="30" Content="Sačuvaj" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Width="130" Cursor="Hand" Click="btnSave_Click"/>
    </Grid>
</Window>
