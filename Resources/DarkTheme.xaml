<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- main colours -->

    <!-- window -->
    <SolidColorBrush x:Key="windowBackground" Color="#1B3C53"></SolidColorBrush>
    <SolidColorBrush x:Key="windowForeground" Color="#D3DAD9"></SolidColorBrush>

    <!-- background image -->
    <ImageBrush x:Key="settingsBackground" ImageSource="/Resources/Images/darkSettingsBackground.jpg" Stretch="UniformToFill"/>

    <!-- button -->
    <SolidColorBrush x:Key="buttonBackground" Color="#065084"></SolidColorBrush>
    <SolidColorBrush x:Key="buttonBorderColor" Color="#37353E" ></SolidColorBrush>
    <SolidColorBrush x:Key="buttonForegorund" Color="#D3DAD9"></SolidColorBrush>
    <SolidColorBrush x:Key="buttonPressedBackground" Color="CornflowerBlue"></SolidColorBrush>
    <SolidColorBrush x:Key="buttonHoverBackground" Color="#320A6B"></SolidColorBrush>


    <!-- text box -->
    <SolidColorBrush x:Key="textBoxBackground" Color="#234C6A"></SolidColorBrush>
    <SolidColorBrush x:Key="textBoxBorderColor"  Color="#37353E"></SolidColorBrush>
    <SolidColorBrush x:Key="textBoxForeground" Color="#D3DAD9"></SolidColorBrush>

    <!-- stack panel -->
    <SolidColorBrush x:Key="stackPanelBackground" Color="#234C6A"></SolidColorBrush>

    <!-- slider -->
    <SolidColorBrush x:Key="sliderTrackBackground" Color="#44444E"></SolidColorBrush>
    <SolidColorBrush x:Key="sliderThumbBackground" Color="CornflowerBlue"></SolidColorBrush>
    <SolidColorBrush x:Key="sliderThumbBorder" Color="#EEEEEE"></SolidColorBrush>

    <!-- combo box-->
    <SolidColorBrush x:Key="comboBoxBackground" Color="#234C6A"/>
    <SolidColorBrush x:Key="comboBoxBorderColor" Color="#D3DAD9"/>
    <SolidColorBrush x:Key="comboBoxForeground" Color="#D3DAD9"/>

    <!-- label -->
    <SolidColorBrush x:Key="labelForeground" Color="#D3DAD9"/>
    
    <!-- table row-->
    <SolidColorBrush x:Key="rowBackgroundColor" Color="#3B4953"/>
    <SolidColorBrush x:Key="rowForegroundColor" Color="#D3DAD9"/>

</ResourceDictionary>