<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- main colours -->

    <!-- window -->
    <SolidColorBrush x:Key="windowBackground" Color="#F5F5F7"></SolidColorBrush>
    <SolidColorBrush x:Key="windowForeground" Color="#777C6D"></SolidColorBrush>
    
    <!-- background image -->
    <ImageBrush x:Key="settingsBackground" ImageSource="/Resources/Images/settingsBackground.jpg" Stretch="UniformToFill"/>

    <!-- button -->
    <SolidColorBrush x:Key="buttonBackground" Color="#F5F5F0"></SolidColorBrush>
    <SolidColorBrush x:Key="buttonBorderColor" Color="#8CA9FF" ></SolidColorBrush>
    <SolidColorBrush x:Key="buttonForegorund" Color="DarkSlateGray"></SolidColorBrush>
    <SolidColorBrush x:Key="buttonPressedBackground" Color="#78B9B5"></SolidColorBrush>
    <SolidColorBrush x:Key="buttonHoverBackground" Color="#B2D8CE"></SolidColorBrush>

    <!-- text box -->
    <SolidColorBrush x:Key="textBoxBackground" Color="#EEEEEE"></SolidColorBrush>
    <SolidColorBrush x:Key="textBoxBorderColor"  Color="#8CA9FF"></SolidColorBrush>
    <SolidColorBrush x:Key="textBoxForeground" Color="#696FC7"></SolidColorBrush>
    
    <!-- stack panel -->
    <SolidColorBrush x:Key="stackPanelBackground" Color="#E5D9F2"></SolidColorBrush>
    
    <!-- slider -->
    <SolidColorBrush x:Key="sliderTrackBackground" Color="CornflowerBlue"></SolidColorBrush>
    <SolidColorBrush x:Key="sliderThumbBackground" Color="Blue"></SolidColorBrush>
    <SolidColorBrush x:Key="sliderThumbBorder" Color="Gray"></SolidColorBrush>
    
    <!-- combo box-->
    <SolidColorBrush x:Key="comboBoxBackground" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="comboBoxBorderColor" Color="#8CA9FF"/>
    <SolidColorBrush x:Key="comboBoxForeground" Color="DarkSlateGray"/>
    
    <!-- label -->
    <SolidColorBrush x:Key="labelForeground" Color="DarkSlateGray"/>

    <!-- table row-->
    <SolidColorBrush x:Key="rowBackgroundColor" Color="#EDFFF0"/>
    <SolidColorBrush x:Key="rowForegroundColor" Color="#777C6D"/>

</ResourceDictionary>